<head>
    <style>
        * {
            margin: 0;
        }

        .Container {
            margin: 0 auto;
            width: max-content;
        }

        table,
        th,
        td {
            border: 2px solid black
        }

        h1 {
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="Container">
        <h1>Departments</h1>

        <br />

        <table>
            <tr>
                <th>DID</th>
                <th>Name</th>
                <th>Budget</th>
                <th>Location</th>
                <th>Delete</th>
            </tr>
            <% for(let d of departments) {%>
            <tr>
                <td>
                    <%= d.did %>
                </td>
                <td>
                    <%= d.dname %>
                </td>
                <td>
                    <%= d.budget %>
                </td>
                <td>
                    <%= d.county %>
                </td>
                <td>
                    <a href="/depts/delete/<%= d.did %>">Delete</a>
                </td>
            </tr>
            <% }%>
        </table>
        <br>
        <a href="/">Home</a>
    </div>
</body>
