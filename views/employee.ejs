<head>
    <style>
        * {
            margin: 0;
        }

        #Container {
            margin: 0 auto;
            width: max-content;
        }

        .ButtonHolder {
            display: flex;
            align-items: center;
            justify-items: center;
        }

        #UpdateButton {
            padding: .25rem .5rem;
            margin: 0 auto;
        }

    </style>
</head>

<body>
    <div id="Container">
        <h1>Edit Employee</h1>

        <br />
        <hr />
        <br />

        <form action="/employees/edit/<%= e.eid %>" method="POST">
            <label>EID:</label>
            <input type="text" name="id" value="<%= e.eid %>" /><br>

            <label>Name</label>
            <input type="text" name="name" value="<%= e.ename %>" /><br>

            <label>Role:</label>
            <select name="role" value="<%= e.role %>">
                <option value="Manager">Manager</option>
                <option value="Employee">Employee</option>
            </select><br>

            <label>Salary</label>
            <input type="number" name="salary" value="<%= e.salary %>" /><br>
            <br>
            <div class="ButtonHolder">
                <input type="submit" value="Update" id="UpdateButton" />
            </div>
        </form>
        <a href="/">Home</a>
    </div>
</body>
