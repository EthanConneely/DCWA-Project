<head>
    <style>
        * {
            margin: 0;
        }

        #Container {
            margin: 0 auto;
            width: max-content;
        }

        .ButtonHolder {
            display: flex;
            align-items: center;
            justify-items: center;
        }

        #UpdateButton {
            padding: .25rem .5rem;
            margin: 0 auto;
        }
    </style>
</head>

<body>
    <div id="Container">
        <h1>Edit Employee</h1>

        <br />
        <hr />
        <br />

        <% if (errors!==undefined) {%>

        <% for (let err of errors) {%>
        <li><%= err.msg %></li>
        <% }%>

        <br />
        <hr />
        <br />
        <% }%>

        <form action="/employees/edit/<%= e.eid %>" method="POST">
            <label>EID:</label>
            <input type="text" value="<%= e.eid %>" disabled /><br>

            <label>Name</label>
            <input name="name" type="text" value="<%= e.ename %>" /><br>

            <label>Role:</label>
            <select name="role">
                <option value=""></option>
                <option <%= e.role == 'Manager'  ? 'selected' :'' %> value="Manager">Manager</option>
                <option <%= e.role == 'Employee' ? 'selected' :'' %> value="Employee">Employee</option>
            </select><br>

            <label>Salary</label>
            <input name="salary" type="text" inputmode="numeric" value="<%= e.salary %>" /><br>
            <br>
            <div class="ButtonHolder">
                <input type="submit" value="Update" id="UpdateButton" />
            </div>
        </form>
        <br>
        <a href="/employees">Home</a>
    </div>
</body>
