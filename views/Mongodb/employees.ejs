<head>
    <style>
        * {
            margin: 0;
        }

        .Container {
            margin: 0 auto;
            width: max-content;
        }

        table,
        th,
        td {
            border: 2px solid black
        }

        h1 {
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="Container">
        <h1>Employees (MongoDB)</h1>

        <br />
        <br />
        <br />

        <a href="/employeesMongoDB/add">Add Employee (MongoDB)</a>

        <br />
        <br />

        <table>
            <tr>
                <th>EID</th>
                <th>Phone</th>
                <th>Email</th>
            </tr>

            <% for(let e of employees) {%>
            <tr>
                <td>
                    <%= e._id %>
                </td>
                <td>
                    <%= e.phone %>
                </td>
                <td>
                    <%= e.email %>
                </td>
            </tr>
            <% }%>

        </table>
        <br>
        <a href="/">Home</a>
    </div>
</body>
